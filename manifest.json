{
  "manifest_version": 3,
  "name": "Chatterbox TTS mini",
  "version": "0.1.0",
  "description": "Floating pill TTS controller (open-source).",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "offscreen"
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["fab.content.js"], "run_at": "document_idle" }
  ],
  "commands": {
    "toggle-play-pause": {
      "suggested_key": { "default": "Ctrl+Shift+P", "mac": "Command+Shift+P" },
      "description": "Toggle play/pause"
    }
  },
  "action": { "default_title": "Chatterbox TTS mini", "default_popup": "popup.html" }
}